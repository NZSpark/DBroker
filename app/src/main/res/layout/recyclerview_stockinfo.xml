<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/trTradeLog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp">


    <TextView
        android:id="@+id/tvStockCode"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp" />


    <TextView
        android:id="@+id/tvTradePercent"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvTradePrice"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvTradeHigh"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvTradeLow"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvTradeValue"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tvTradeVolume"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textAlignment="viewEnd"
        android:textSize="12sp" />

</TableRow>
